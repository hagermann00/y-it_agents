{
    "manifest_version": 3,
    "name": "YIT Image Generator",
    "version": "1.0.0",
    "description": "Batch image generation via Gemini browser UI for Y-IT book production",
    "permissions": [
        "activeTab",
        "storage",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://notebooklm.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*",
                "https://aistudio.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}